<!DOCTYPE html>
<html>
<head>
  <title>Beyondlife</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <a class="brand" href="/">BeyondLife</a>
      <ul class="nav">
        <li class="<%= 'active' if current_page?(root_url) %>"><a href="<%= root_url %>">Home</a></li>
        <% if session[:user_id].present? %>
          <li class="<%= 'active' if current_page?(people_url) %>"><a href="<%= people_url %>">Tributes</a></li>
          <li class="<%= 'active' if current_page?(new_person_url) %>"><a href="<%= new_person_url %>">Create a Tribute</a></li>
        <% end %>
      </ul>
      <div id="navbar-right">
        <ul class="nav">
          <% if session[:user_id] %>
            <li><a href="/sign_out">Sign Out</a></li>
          <% else %>
            <li><a href="/auth/facebook">Sign In via Facebook</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

<div class="container">
 <% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
 <% end %>

<%= yield %>

</body>
</html>
